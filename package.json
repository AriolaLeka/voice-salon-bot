{
  "name": "voice-salon-bot",
  "version": "2.0.0",
  "description": "Voice-driven salon bot backend for TopPestanas using ElevenLabs Conversational AI",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node test-elevenlabs.js",
    "test:elevenlabs": "node test-elevenlabs.js",
    "test:mock": "node test-elevenlabs-mock.js",
    "docker:build": "docker build -t service-bot .",
"docker:run": "docker run -p 3000:3000 --env-file .env service-bot",
    "docker:compose": "docker-compose up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:test": "./build-and-deploy.sh test",
    "docker:deploy": "./build-and-deploy.sh all",
    "aws:setup": "./create-aws-resources.sh",
    "aws:api-gateway": "./api-gateway-setup.sh",
    "aws:deploy": "./deploy-to-aws.sh",
    "aws:cleanup": "echo 'See AWS_DEPLOYMENT_QUICK_START.md for cleanup commands'"
  },
  "keywords": [
    "voice",
    "salon",
    "bot",
    "elevenlabs",
    "conversational-ai",
    "beauty"
  ],
  "author": "TopPestanas",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
